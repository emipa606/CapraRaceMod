<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <FactionDef ParentName="FactionBase">
    <defName>CapraSettlement</defName>
    <label>Capra Settlement</label>
    <description>It's a settlement of capras, nothing special and, like other tribes and people, mainly concerned about trade, trust and survival.</description>
    <pawnsPlural>Capras</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Capra Leader</leaderTitle>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <techLevel>Ultra</techLevel>
    <raidLootMaker>PirateRaidLootMaker</raidLootMaker>
    <backstoryFilters>
      <li>
        <categories>
          <li>Capra_ALL</li>
        </categories>
      </li>
    </backstoryFilters>
    <allowedCultures>
      <li>Rustican</li>
    </allowedCultures>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <Capra_Colonist>50</Capra_Colonist>
          <Capra_Leader>250</Capra_Leader>
          <Capra_Soldier>130</Capra_Soldier>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <Capra_Colonist>50</Capra_Colonist>
          <Capra_Leader>250</Capra_Leader>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <Capra_Trader>1</Capra_Trader>
        </traders>
        <carriers>
          <Muffalo>2</Muffalo>
          <Dromedary>2</Dromedary>
        </carriers>
        <guards>
          <Capra_Soldier>130</Capra_Soldier>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <Capra_Colonist>50</Capra_Colonist>
          <Capra_Leader>250</Capra_Leader>
          <Capra_Soldier>130</Capra_Soldier>
        </options>
      </li>
    </pawnGroupMakers>
    <factionIconPath>World/WorldObjects/CapraOutpost</factionIconPath>
    <settlementTexturePath>World/WorldObjects/CapraOutpost</settlementTexturePath>
  </FactionDef>
  <ThingSetMakerDef>
    <defName>PirateRaidLootMaker</defName>
    <root Class="ThingSetMaker_MarketValue">
      <fixedParams>
        <filter>
          <thingDefs>
            <li>Silver</li>
            <li>MedicineIndustrial</li>
            <li>MealSurvivalPack</li>
            <li>Flake</li>
            <li>Yayo</li>
            <li>GoJuice</li>
            <li>WakeUp</li>
            <li>SmokeleafJoint</li>
            <li>Luciferium</li>
          </thingDefs>
        </filter>
      </fixedParams>
    </root>
  </ThingSetMakerDef>
  <FactionDef ParentName="FactionBase">
    <defName>WhiteArmy</defName>
    <label>WhiteArmy</label>
    <description>It's a warlord organization formed not far away, as the name suggests, because it's more violent than diplomatic, so it's better to avoid them.</description>
    <pawnsPlural>Capras</pawnsPlural>
    <requiredCountAtGameStart>1</requiredCountAtGameStart>
    <settlementGenerationWeight>1</settlementGenerationWeight>
    <maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
    <canMakeRandomly>true</canMakeRandomly>
    <canSiege>true</canSiege>
    <canStageAttacks>true</canStageAttacks>
    <leaderTitle>Commander</leaderTitle>
    <factionNameMaker>NamerFactionOutlander</factionNameMaker>
    <settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
    <techLevel>Ultra</techLevel>
    <raidLootMaker>PirateRaidLootMaker</raidLootMaker>
    <naturalEnemy>true</naturalEnemy>
    <backstoryFilters>
      <li>
        <categories>
          <li>Capra_ALL</li>
        </categories>
      </li>
    </backstoryFilters>
    <allowedCultures>
      <li>Kriminul</li>
    </allowedCultures>
    <visitorTraderKinds>
      <li>Visitor_Outlander_Standard</li>
    </visitorTraderKinds>
    <caravanTraderKinds>
      <li>Caravan_Outlander_BulkGoods</li>
      <li>Caravan_Outlander_CombatSupplier</li>
      <li>Caravan_Outlander_Exotic</li>
    </caravanTraderKinds>
    <baseTraderKinds>
      <li>Base_Outlander_Standard</li>
    </baseTraderKinds>
    <allowedArrivalTemperatureRange>
      <min>-50</min>
      <max>45</max>
    </allowedArrivalTemperatureRange>
    <maxPawnCostPerTotalPointsCurve>
      <points>
        <li>(0,35)</li>
        <li>(70, 50)</li>
        <li>(700, 100)</li>
        <li>(1300, 150)</li>
        <li>(100000, 10000)</li>
      </points>
    </maxPawnCostPerTotalPointsCurve>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <options>
          <WhiteArmy>65</WhiteArmy>
          <WhiteArmy_Gunner>130</WhiteArmy_Gunner>
          <WhiteArmy_officer>65</WhiteArmy_officer>
          <WhiteArmy_Commander>130</WhiteArmy_Commander>
        </options>
      </li>
      <li>
        <kindDef>Peaceful</kindDef>
        <options>
          <WhiteArmy>65</WhiteArmy>
          <WhiteArmy_Commander>130</WhiteArmy_Commander>
        </options>
      </li>
      <li>
        <kindDef>Trader</kindDef>
        <traders>
          <WhiteArmy_officer>1</WhiteArmy_officer>
        </traders>
        <carriers>
          <Muffalo>4</Muffalo>
          <Dromedary>6</Dromedary>
        </carriers>
        <guards>
          <WhiteArmy>65</WhiteArmy>
        </guards>
      </li>
      <li>
        <kindDef>Settlement</kindDef>
        <options>
          <WhiteArmy>65</WhiteArmy>
          <WhiteArmy_Gunner>130</WhiteArmy_Gunner>
          <WhiteArmy_Commander>130</WhiteArmy_Commander>
        </options>
      </li>
    </pawnGroupMakers>
    <factionIconPath>World/WorldObjects/WhiteArmy_Icon</factionIconPath>
    <settlementTexturePath>World/WorldObjects/WhiteArmy_Icon</settlementTexturePath>
  </FactionDef>
</Defs>