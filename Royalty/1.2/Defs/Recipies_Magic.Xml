<Defs>
  <RecipeDef>
    <defName>MakeMagicWand</defName>
    <label>Make MagicWand</label>
    <description>Make a magic rod by cutting and trimming the ingredients.</description>
    <jobString>Making magic rod.</jobString>
    <workSpeedStat>GeneralLaborSpeed</workSpeedStat>
    <effectWorking>Sculpt</effectWorking>
    <soundWorking>Recipe_Sculpt</soundWorking>
    <workAmount>3000</workAmount>
    <allowMixingIngredients>true</allowMixingIngredients>
    <targetCountAdjustment>50</targetCountAdjustment>
    <recipeUsers>
      <li>WorkingBench</li>
    </recipeUsers>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>CAWoodLog</li>
          </thingDefs>
        </filter>
        <count>60</count>
      </li>
    </ingredients>
    <fixedIngredientFilter>
      <categories>
      </categories>
    </fixedIngredientFilter>
    <products>
      <MagicWand>1</MagicWand>
    </products>
    <researchPrerequisite>Capra_Reseach_MagicWand</researchPrerequisite>
    <workSkill>Crafting</workSkill>
  </RecipeDef>
