<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="ResourceVerbBase">
    <defName>MagicWand</defName>
    <label>Magic Wand</label>
    <description>It's a basic magic rod, but it's still strong, so it's not useless.</description>
    <graphicData>
      <texPath>Things/Pawn/item/magic/Magic_base</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <stackLimit>1</stackLimit>
    <tradeability>None</tradeability>
    <statBases>
      <Mass>0.5</Mass>
    </statBases>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>1.2</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1.2</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseWeapon_Bladelink">
    <defName>MagicWand_Fire</defName>
    <label>Fire Magic Wand</label>
    <description>It's a wand that can perform basic flame magic. I can only shoot a simple fireball yet.</description>
    <graphicData>
      <texPath>Things/Pawn/item/magic/Magic_2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <soundInteract>Interact_Rifle</soundInteract>
    <generateCommonality>0.3</generateCommonality>
    <tradeability>None</tradeability>
    <statBases>
      <Mass>0.5</Mass>
    </statBases>
    <comps>
      <li>
        <compClass>AdditionalVerb.Comp_VerbSaveable</compClass>
      </li>
    </comps>
    <verbs>
      <li Class="AdditionalVerb.VerbProperties_Custom">
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Fireball_MagicWand</defaultProjectile>
        <warmupTime>5</warmupTime>
        <range>25</range>
        <forcedMissRadius>1.9</forcedMissRadius>
        <burstShotCount>3</burstShotCount>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <desc>Fireball</desc>
        <label>Fireball</label>
        <texPath>UI/Commands/FireballUI</texPath>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
      <li Class="AdditionalVerb.VerbProperties_Custom">
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Fapet_MagicWand</defaultProjectile>
        <warmupTime>30</warmupTime>
        <range>20</range>
        <forcedMissRadius>1.9</forcedMissRadius>
        <burstShotCount>1</burstShotCount>
        <soundCast>Shot_IncendiaryLauncher</soundCast>
        <soundCastTail>GunTail_Medium</soundCastTail>
        <muzzleFlashScale>14</muzzleFlashScale>
        <desc>Fapet</desc>
        <label>Fapet</label>
        <texPath>UI/Commands/FapetUI</texPath>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <tools>
      <li>
        <label>handle</label>
        <capacities>
          <li>Poke</li>
        </capacities>
        <power>1.2</power>
        <cooldownTime>1</cooldownTime>
      </li>
      <li>
        <label>head</label>
        <labelUsedInLogging>false</labelUsedInLogging>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>1.2</power>
        <cooldownTime>1</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Fireball_MagicWand</defName>
    <label>Fireball</label>
    <graphicData>
      <texPath>Things/Projectile/FireB</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <color>(254,189,58)</color>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <speed>30</speed>
      <damageDef>Flame</damageDef>
      <!-- Use default damage from explosion def -->
      <explosionRadius>2.1</explosionRadius>
      <ai_IsIncendiary>true</ai_IsIncendiary>
      <arcHeightFactor>0.2</arcHeightFactor>
      <shadowSize>0.6</shadowSize>
    </projectile>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Fapet_MagicWand</defName>
    <label>Fapet</label>
    <graphicData>
      <texPath>Things/Projectile/FireB</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <shaderType>TransparentPostLight</shaderType>
      <color>(254,189,58)</color>
    </graphicData>
    <thingClass>Projectile_Explosive</thingClass>
    <projectile>
      <speed>120</speed>
      <damageDef>Flame</damageDef>
      <!-- Use default damage from explosion def -->
      <explosionRadius>5.1</explosionRadius>
      <preExplosionSpawnThingDef>Filth_Fuel</preExplosionSpawnThingDef>
      <preExplosionSpawnChance>0.8</preExplosionSpawnChance>
      <ai_IsIncendiary>true</ai_IsIncendiary>
      <arcHeightFactor>0.2</arcHeightFactor>
      <shadowSize>0.6</shadowSize>
    </projectile>
  </ThingDef>
