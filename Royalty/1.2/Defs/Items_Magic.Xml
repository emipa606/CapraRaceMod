  <ThingDef ParentName="BaseWeapon_Bladelink">
    <defName>Rocket_Wand</defName>
    <label>Rocket Wand</label>
    <description>It's a magic rod that uses powerful rocket-shooting magic, and it doesn't seem to be a magic category anymore, but it doesn't matter.</description>
    <tickerType>Normal</tickerType>
    <graphicData>
      <texPath>Things/Pawn/item/magic/Magic_4</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <tradeability>None</tradeability>
    <statBases>
